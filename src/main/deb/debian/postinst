#!/bin/sh
# postinst script for tracker
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# . /usr/share/dbconfig-common/dpkg/postinst 
# dbc_generate_include='template:/etc/tracker/tracker-config.groovy'
# dbc_generate_include_perms="755"
# dbc_generate_include_owner="root:root"
# dbc_generate_include_args="-o template_infile=/etc/tracker/tracker-config.groovy.template -U"
# dbc_go tracker $@

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

        if [ ! -e /etc/tracker/tracker-config.groovy ] ; then
          cp /etc/tracker/tracker-config.groovy.template /etc/tracker/tracker-config.groovy
        fi

        RET=""
        db_get tracker-server/database_host
        DB_HOST=$RET
        sed -i "s/_DBC_DBSERVER_/$DB_HOST/" /etc/tracker/tracker-config.groovy

        RET=""
        db_get tracker-server/database_port
        DB_PORT=$RET
        sed -i "s/_DBC_DBPORT_/$DB_PORT/" /etc/tracker/tracker-config.groovy

        RET=""
        db_get tracker-server/database_name
        DB_NAME=$RET
        sed -i "s/_DBC_DBNAME_/$DB_NAME/" /etc/tracker/tracker-config.groovy

        RET=""
        db_get tracker-server/database_username
        DB_USER=$RET
        sed -i "s/_DBC_DBUSER_/$DB_USER/" /etc/tracker/tracker-config.groovy

        RET=""
        db_get tracker-server/database_password
        DB_PASSWORD=$RET
        sed -i "s/_DBC_DBPASS_/$DB_PASSWORD/" /etc/tracker/tracker-config.groovy

        # Create tracker user if it doesn't exist.
        if ! id tracker > /dev/null 2>&1 ; then
            adduser --system --home /usrs/share/tracker --no-create-home \
                 --disabled-password tracker
        fi

        ## We might have a pre-existing link created, so don't just wipe it
        ## rm -f /usr/share/tracker
        ## ln -s /usr/share/tracker-* /usr/share/tracker

        if [ ! -e /var/lib/tracker/conf ] ; then
          ln -s /etc/tracker /var/lib/tracker/conf
        fi

        chown -R tracker:adm /var/lib/tracker /var/log/tracker /etc/tracker
        chmod -R 750      /var/lib/tracker /var/log/tracker /etc/tracker
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
