#!/bin/sh
# postinst script for tracker-webapp
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# . /usr/share/dbconfig-common/dpkg/postinst 
# dbc_generate_include='template:/etc/tracker-webapp/tracker-webapp.xml'
# dbc_generate_include_perms="755"
# dbc_generate_include_owner="root:root"
# dbc_generate_include_args="-o template_infile=/etc/tracker-webapp/tracker-webapp.xml.template -U"
# dbc_go tracker-webapp $@

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

        RET=""
        db_get tracker-webapp/database_host
        DB_HOST=$RET
        DB_HOST=$(echo "$DB_HOST" | perl -MHTML::Entities -ne 'print encode_entities($_)')
        sed -i "s/_DBC_DBSERVER_/$DB_HOST/" /etc/tracker-webapp/tracker-webapp.xml

        RET=""
        db_get tracker-webapp/database_port
        DB_PORT=$RET
        DB_PORT=$(echo "$DB_PORT" | perl -MHTML::Entities -ne 'print encode_entities($_)')
        sed -i "s/_DBC_DBPORT_/$DB_PORT/" /etc/tracker-webapp/tracker-webapp.xml

        RET=""
        db_get tracker-webapp/database_name
        DB_NAME=$RET
        DB_NAME=$(echo "$DB_NAME" | perl -MHTML::Entities -ne 'print encode_entities($_)')
        sed -i "s/_DBC_DBNAME_/$DB_NAME/" /etc/tracker-webapp/tracker-webapp.xml

        RET=""
        db_get tracker-webapp/database_username
        DB_USER=$RET
        DB_USER=$(echo "$DB_USER" | perl -MHTML::Entities -ne 'print encode_entities($_)')
        sed -i "s/_DBC_DBUSER_/$DB_USER/" /etc/tracker-webapp/tracker-webapp.xml

        RET=""
        db_get tracker-webapp/database_password
        DB_PASSWORD=$RET
        DB_PASSWORD=$(echo "$DB_PASSWORD" | perl -MHTML::Entities -ne 'print encode_entities($_)')
        sed -i "s/_DBC_DBPASS_/$DB_PASSWORD/" /etc/tracker-webapp/tracker-webapp.xml

        # Create tracker user if it doesn't exist.
        if ! id trackerapp > /dev/null 2>&1 ; then
            adduser --system --home /usr/share/tracker-webapp --no-create-home \
                 --disabled-password trackerapp
        fi
        
        ## We might have a pre-existing link created, so don't just wipe it
        ## rm -f /usr/share/tracker-webapp
        ## ln -s /usr/share/tracker-webapp-* /usr/share/tracker-webapp
        ##
        ## if [ ! -e /var/lib/tracker-webapp/conf ] ; then
        ##   ln -s /etc/tracker-webapp /var/lib/tracker-webapp/conf
        ## fi
        
        chown -R trackerapp:adm /usr/share/tracker-webapp /var/log/tracker-webapp /var/run/tracker-webapp /etc/tracker-webapp
        chmod -R 750      /usr/share/tracker-webapp /var/log/tracker-webapp /var/run/tracker-webapp /etc/tracker-webapp
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
